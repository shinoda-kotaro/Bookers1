<div class="main-contents">
  <h1>Books</h1>

  <div class="list_container">
    <table class="book_list">
      <tr>
        <th class="book_title">title</th>
        <th class="book_body">body</th>
        <th class="buttons"></th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <div class="book_data">
          <td class="title_data"><%= book.title %></td>
          <td class="body_data"><%= book.body %></td>
        </div>
        <td class="buttons" width="300">
          <span>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete %>
          </span>
        </td>
      </tr>
      <% end %>
    </table>
  </div>


  <h2>New book</h2>

  <%= form_for @book do |f| %>

  <% if @book.errors.any? %>

  <div id="error_explanation" class="alert alert-danger">
    <h4 class="error_count"><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
    <ul class="error_box">
      <% @book.errors.full_messages.each do |message| %>
      <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <div class="form_title_label">
      <%= f.label :title, "Title" %>
    </div>
    <div class="form_title">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="area">
    <div class="form_body_label">
      <%= f.label :body, "Body" %>
    </div>
    <div class="form_body">
      <%= f.text_area :body %>
    </div>
  </div>
  <br>
  <%= f.submit "Create Book" %>

  <% end %>
</div>