<div class="main-contents">
  <h1>Editing Book</h1>

  <%= form_for @book do |f| %>

  <% if @book.errors.any? %>

  <div id="error_explanation" class="alert alert-danger">
    <h4 class="error_count"><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
    <ul class="error_box">
      <% @book.errors.full_messages.each do |message| %>
      <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <div class="form_title_label">
      <%= f.label :title, "Title" %>
    </div>
    <div class="form_title">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="area">
    <div class="form_body_label">
      <%= f.label :body, "Body" %>
    </div>
    <div class="form_body">
      <%= f.text_area :body %>
    </div>
  </div>
  <br>
  <%= f.submit "Update Book" %>

  <% end %>

  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>