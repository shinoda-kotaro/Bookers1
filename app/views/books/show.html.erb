<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>
<div class="show_table_container">
  <table>
    <tr>
      <th>Title:</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th>Body:</th>
      <td><%= @book.body %></td>
    </tr>
  </table>
</div>
<div class="show_button">
  <%= link_to "Edit", edit_book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>